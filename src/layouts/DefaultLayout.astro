---
import '../styles/global.css'
import Sidebar from '../components/Sidebar.astro'
import TocNav from '../components/TocNav.astro'
import global from '../data/global.yml'
---

<html lang="hu">
  <head>
    <title>{global.site.title}</title>
    <meta name="description" content={global.site.description} />
  </head>
  <body class="bg-gray-50">
    <header class="flex items-center justify-between p-4">
      <img src={global.site.logo} alt="LogÃ³" class="h-10" />
      <nav class="hidden md:block">
        <ul class="flex space-x-4">
          {global.menu.map(item => (
            <li><a href={`#${item.id}`}>{item.label}</a></li>
          ))}
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-100 text-sm p-4">
      <p>{global.footer.address}</p>
      <p>Email: <a href={`mailto:${global.footer.email}`}>{global.footer.email}</a></p>
    </footer>
  </body>
</html>
