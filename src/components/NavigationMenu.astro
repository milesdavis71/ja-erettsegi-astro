---
const { menu, customClass = "" } = Astro.props; // a DefaultLayout-ból érkezik
const currentUrl = Astro.url.pathname; // aktuális oldal URL-je
---

<nav class={`p-4 ${customClass}`} aria-label="Fő navigáció">
  <ul class="space-y-1 list-none pl-0">
    {
      menu.map((item: any) => {
        const isActive = currentUrl === item.url || currentUrl.startsWith(item.url + "/");
        return (
          <li>
            <a
              href={item.url}
              class={`block px-4 py-2 rounded-md transition-colors duration-150 no-underline ${
                isActive
                  ? "bg-blue-100 font-semibold"
                  : "text-gray-700 hover:text-blue-600 hover:bg-gray-50"
              }`}
              style={isActive ? "color: var(--link-base-color);" : ""}
            >
              {item.label}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
