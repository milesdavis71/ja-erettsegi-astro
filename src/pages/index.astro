---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import newsData from '../data/news.yml'
import NewsCards from '../components/NewsCards.astro'
import emeltSzintuErettsegi from '../assets/images/emelt-szintu-erettsegi-felkeszito-tanfolyam.jpg'
import Tanfolyamokrol from '../components/tanfolyamokrol.mdx'
import MiertErdemesHozzankJelentkezni from '../components/miertErdemesHozzankJelentkezni.mdx'
import Button from '../components/button.astro'
import Tantargyak from '../components/tantargyak.mdx'

export const frontmatter = {
  title: 'Emelt szintű érettségire felkészítő tanfolyamok',
}

const { news } = newsData
// Csak az első 3 hírt jelenítjük meg
const featuredNews = news.slice(0, 3)
---

<!-- hello commit: egyszerű teszt módosítás az index oldalon -->
<DefaultLayout {frontmatter}>
  <!-- Hírek szekció -->
  <section id="news" class="bg-gray-50 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 id="hirek" class="text-center">Hírek</h2>

      <NewsCards items={featuredNews} />
    </div>
  </section>

  <section class="py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 items-start gap-8 md:grid-cols-2">
        <div>
          <p>
            Egyetemre készülsz? Szeretnél minél jobb felvételi eredményt elérni? Megalapoznád
            egyetemi tanulmányaidat? Felvételi pontokat gyűjtenél?
          </p>
          <p>
            Kerülj egy lépéssel közelebb az egyetemhez és jelentkezz emelt szintű érettségire
            felkészítő tanfolyamainkra! Segítünk a továbbtanulásban!
          </p>
        </div>
        <div>
          <img
            class="rounded-lg shadow-lg"
            src={emeltSzintuErettsegi.src}
            alt="Emelt szintű érettségi felkészítő tanfolyam"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="-mt-12 pb-4 text-center">
    <p class="mt-8 mb-4 text-gray-600">Kérjük, tanulmányozd át a tanfolyam szabályzatát:</p>
    <Button
      link="/dokumentumok/emelt_szintu_eretts_felkeszit_tanfolyamok_szabalyzat_2025.pdf"
      icon="lucide:file-text"
      text="Tanfolyam Szabályzat"
      target="_blank"
    />
    <hr class="mt-8 border-gray-200" />
    <div class="mt-8 flex justify-center gap-4">
      <Button link="#intro" text="Részletek" secondary icon="lucide:file-text" />
      <Button link="/kapcsolat" text="Jelentkezés" />
    </div>
  </section>

  <section id="intro" class="py-12">
    <h2 id="bevezetes">1. A tanfolyamokról</h2>
    <div class="prose">
      <Tanfolyamokrol />
    </div>
  </section>

  <section id="section1" class="py-12">
    <h2 id="fejezet-1">2. Miért érdemes hozzánk jelentkezni?</h2>
    <MiertErdemesHozzankJelentkezni />
  </section>

  <section id="section2" class="py-12">
    <h2 id="fejezet-2">3. Tantárgyak</h2>
    <Tantargyak />
  </section>

  <section id="section3" class="py-12">
    <h2 id="kapcsolat">Kapcsolat</h2>
    <p class="max-w-2xl">Itt jönne a footer vagy a kapcsolat űrlap.</p>
  </section>
</DefaultLayout>
