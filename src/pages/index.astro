---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import newsData from '../data/news.yml'

const { news } = newsData
// Csak az első 3 hírt jelenítjük meg
const featuredNews = news.slice(0, 3)
---

<DefaultLayout>
  <!-- Hírek szekció -->
  <section id="news" class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-center">Hírek</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {featuredNews.map((item) => (
          <article 
            class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
          >
            <div class="relative h-48 bg-gray-200 overflow-hidden">
              <img 
                src={item.image} 
                alt={item.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs font-semibold text-blue-600 uppercase tracking-wide">
                  {item.category}
                </span>
                <time class="text-xs text-gray-500">
                  {new Date(item.date).toLocaleDateString('hu-HU', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              <h3 class="text-xl font-bold mb-2 text-gray-900 line-clamp-2">
                {item.title}
              </h3>
              <p class="text-gray-600 text-sm line-clamp-3">
                {item.excerpt}
              </p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section id="intro" class="min-h-screen py-12">
    <h1 class="mb-4 text-3xl font-bold">Bevezetés</h1>
    <p class="max-w-2xl">Ez az Astro + Tailwind + Alpine alapú reszponzív layout...</p>
  </section>

  
  <section id="section1" class="min-h-screen py-12">
    <h2 class="mb-4 text-2xl font-semibold">Fejezet 1</h2>
    <p class="max-w-2xl">A fő tartalmi rész itt jelenik meg...</p>
  </section>

  <section id="section2" class="min-h-screen py-12">
    <h2 class="mb-4 text-2xl font-semibold">Fejezet 2</h2>
    <p class="max-w-2xl">Scroll közben a jobb oldali navigáció követi a szekciókat.</p>
  </section>

  <section id="section3" class="min-h-screen py-12">
    <h2 class="mb-4 text-2xl font-semibold">Kapcsolat</h2>
    <p class="max-w-2xl">Itt jönne a footer vagy a kapcsolat űrlap.</p>
  </section>
</DefaultLayout>
