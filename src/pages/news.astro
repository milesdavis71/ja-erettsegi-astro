---
import TwoColumnLayout from '../layouts/TwoColumnLayout.astro';
import newsData from '../data/news.yml';
import NewsCards from '../components/NewsCards.astro';

const { news } = newsData;
---

<TwoColumnLayout frontmatter={{ title: 'Hírek', description: 'Böngésszen az összes hírünk között.' }}>
  <section id="all-news" class="py-8">
    <div class="px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold mb-6 text-center">Összes hír</h1>
      <NewsCards items={news} variant="grid" columns="grid-cols-1 md:grid-cols-2 xl:grid-cols-3" />
    </div>
  </section>
</TwoColumnLayout>
